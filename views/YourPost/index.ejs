  <script>
    document.getElementById('feedback-form1').addEventListener('submit', async (e) => {
      e.preventDefault();
  
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());
  
      try {
          const response = await fetch('/submit-feedback', {
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json'
              },
              body: JSON.stringify(data)
          });
  
          const result = await response.json();
  
          if (response.ok) {
              alert(result.message); // "Feedback submitted successfully!"
              e.target.reset(); // Clear form on success
          } else {
              alert(result.message || 'Error submitting feedback.'); // Show error message
              console.error(result.errors || 'Unknown error');
          }
      } catch (error) {
          console.error('Request failed:', error);
          alert('Error submitting feedback. Please try again later.');
      }
  });
  
    </script>
